			</fileset>
		</copy>
		<copy todir="dist/src" overwrite="true">
			<fileset dir="pending/src/main/java" includes="org/**/*.java">
				<exclude name="**/coverage/**/*.java"/>
				<exclude name="**/annotation/**/*.java"/>
			</fileset>
		</copy>
		

		
