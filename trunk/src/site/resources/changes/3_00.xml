<?xml version="1.0" encoding="ISO-8859-1"?>

<project name="Rename" default="rename">
  <target name="rename">
    <replace dir=".">
      <include name="**/*.mf" />
      <include name="**/*.txt"/>
      <include name="**/*.apt"/>
      <include name="**/*.xml"/>
      <include name="**/*.html"/>
      <include name="**/*.java"/>
      <replacefilter token="org.opengis.referencing.Factory"                   value="org.opengis.util.Factory"/>
      <replacefilter token="org.opengis.referencing.FactoryException"          value="org.opengis.util.FactoryException"/>
      <replacefilter token="org.opengis.referencing.NoSuchIdentifierException" value="org.opengis.util.NoSuchIdentifierException"/>
    </replace>
  </target>
</project>
